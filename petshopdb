CREATE TABLE Toys(TOY_ID INT PRIMARY KEY IDENTITY(1,1), NAME VARCHAR(255), DESCRIPTION VARCHAR(MAX), ANIMAL_ID INT FOREIGN KEY REFERENCES Animals(ANIMAL_ID), PRICE DECIMAL (10,2));
INSERT INTO Toys(NAME, DESCRIPTION, ANIMAL_ID)  VALUES('Toy 1', 'Description 1', 1, '230.00');
