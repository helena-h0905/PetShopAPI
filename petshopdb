USE PetShopDB
GO

CREATE TABLE Animals(ANIMAL_ID INT PRIMARY KEY IDENTITY(1,1), NAME VARCHAR(150));
INSERT INTO Animals(NAME) VALUES ('Dog');
INSERT INTO Animals(NAME) VALUES ('Cat');
INSERT INTO Animals(NAME) VALUES ('Rabbit');
INSERT INTO Animals(NAME) VALUES ('Hamster');
INSERT INTO Animals(NAME) VALUES ('Parrot');

CREATE TABLE FoodKind(FOOD_KIND_ID INT PRIMARY KEY IDENTITY(1,1), NAME VARCHAR(100));
INSERT INTO FoodKind(NAME) VALUES ('Dry');
INSERT INTO FoodKind(NAME) VALUES ('Wet');
INSERT INTO FoodKind(NAME) VALUES ('Canned');
INSERT INTO FoodKind(NAME) VALUES ('Treats');

CREATE TABLE Food(FOOD_ID INT PRIMARY KEY IDENTITY(1,1), NAME VARCHAR(300), 
DESCRIPTION VARCHAR(MAX), ANIMAL_ID INT FOREIGN KEY REFERENCES Animals(ANIMAL_ID), 
 NUMBER_OF_PACKAGES_IN_STORAGE INT, PACKAGE_WEIGHT_IN_KG DECIMAL (4,2), EARLIEST_EXPIRATION_DATE DATETIME, FOOD_KIND_ID INT FOREIGN KEY REFERENCES FoodKind(FOOD_KIND_ID), PRICE DECIMAL (10,2));
INSERT INTO Food(NAME, DESCRIPTION, ANIMAL_ID, NUMBER_OF_PACKAGES_IN_STORAGE, PACKAGE_WEIGHT_IN_KG, EARLIEST_EXPIRATION_DATE, FOOD_KIND_ID, PRICE) VALUES ('Royal Canin', 'Food for cats', 2, 34, '0.3', '2022-02-04 00:00:00', 1 , '219.99');
