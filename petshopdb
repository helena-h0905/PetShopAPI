CREATE TABLE CareCategory(CATEGORY_ID INT PRIMARY KEY IDENTITY(1,1), NAME VARCHAR(255));
INSERT INTO CareCategory(NAME) VALUES ('Grooming');
INSERT INTO CareCategory(NAME) VALUES ('Washing');
INSERT INTO CareCategory(NAME) VALUES ('Dental care');
INSERT INTO CareCategory(NAME) VALUES ('Litter');

CREATE TABLE CareSupplies(CARE_SUPPLY_ID INT PRIMARY KEY IDENTITY(1,1), NAME VARCHAR(255), DESCRIPTION VARCHAR(MAX), ANIMAL_ID INT FOREIGN KEY REFERENCES Animals(ANIMAL_ID), CATEGORY_ID INT FOREIGN KEY REFERENCES CareCategory(CATEGORY_ID), PRICE DECIMAL (10,2));
INSERT INTO CareSupplies(NAME, DESCRIPTION, ANIMAL_ID, CATEGORY_ID, PRICE) VALUES ('Brush', 'Brush for cats', 2, 1, '340.00');
